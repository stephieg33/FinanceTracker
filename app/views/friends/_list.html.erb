<div class="row">
  <div class="col-6">
    <table class="table table-bordered table-hover mt-3">
      <thead>
    <tr>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <th scope="row"><%= friend.first_name %></th>
          <td><%= friend.last_name %></td>
          <td><%= friend.email %></td>
          <td><%= link_to 'Stop following', friendship_path(friend), method: :delete , data: {confirm: "Are you sure you wish to remove #{friend.first_name} from your stocks?"}, class: "btn btn-sm btn-warning" %></td>
        </tr>
    <% end %>
    </tbody>
    
    </table>
  </div>
</div>